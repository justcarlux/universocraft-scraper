{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "module": "CommonJS",
        "declaration": true,
        "outDir": "lib",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitOverride": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}